%ul#global-nav.header-nav
  %li
    %a{:href => pages_about_url} #{t('app.about')}
  %li
    %a{:href => pages_faq_url} #{t('app.faq')}

  - if logged_in?
    %li
      %span #{link_to t('app.account'), edit_user_path(current_user)}
    %li
      %span #{link_to t('app.logout'), logout_path}
  - else
    %li
      %span #{link_to "#{t('app.login')} | #{t('app.signup')}", login_path(:return_to => request.fullpath)}
